<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="306.0" prefWidth="602.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.digitalbanking.HelloController" style="-fx-background-color: #E0E0E0;">

    <top>
        <HBox spacing="10" style="-fx-background-color: #336699;">

            <VBox alignment="CENTER_RIGHT" spacing="5" style="-fx-padding: 10;">
                <Label fx:id="userNameLabel" style="-fx-text-fill: white;" />
            </VBox>
        </HBox>
    </top>

    <left>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #CCCCCC;">
            <Label style="-fx-font-size: 18; -fx-text-fill: black; -fx-padding: 10;" text="Digitalized Banking System" />
            <Button onAction="#gotoaccount" prefHeight="26.0" prefWidth="158.0" text="Create Account">
                <style>
                    -fx-background-color: transparent;
                </style>
            </Button>

            <Button onAction="#gotodeposit" prefHeight="26.0" prefWidth="159.0" text="Deposit Money">
                <style>
                    -fx-background-color: transparent;
                </style>
            </Button>
            <Button onAction="#gotowithdraw" prefHeight="26.0" prefWidth="161.0" text="Withdraw Money">
                <style>
                    -fx-background-color: transparent;
                </style>
            </Button>
            <Button onAction="#gototransfer" prefHeight="26.0" prefWidth="157.0" text="Transfer Money">
                <style>
                    -fx-background-color: transparent;
                </style>
            </Button>
        </VBox>
    </left>

    <center>
        <Label style="-fx-font-size: 24; -fx-text-fill: black;" text="Welcome to digitalized Bank!" textFill="#000000fa" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>
