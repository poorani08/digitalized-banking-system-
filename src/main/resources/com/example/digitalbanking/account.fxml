<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.digitalbanking.HelloController">

    <ImageView fitHeight="520.0" fitWidth="673.0" layoutX="-73.0">
        <image>
            <Image url="@account.png" />
        </image>
    </ImageView>

    <HBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
        <VBox alignment="CENTER" spacing="20">
            <Label style="-fx-font-size: 24; -fx-text-fill: white;" text="Create Account" />


            <HBox spacing="10">
                <VBox spacing="5">
                    <Label style="-fx-font-size: 16; -fx-text-fill: white;" text="Account Number:" />
                    <TextField fx:id="accountNumberField" promptText="Enter account number" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-font-size: 16; -fx-text-fill: white;" text="Account Holder Name:" />
                    <TextField fx:id="accountHolderNameField" promptText="Enter account holder name" />
                </VBox>
            </HBox>

            <VBox spacing="5">
                <Label style="-fx-font-size: 16; -fx-text-fill: white;" text="Initial Deposit:" />
                <TextField fx:id="initialDepositField" promptText="Enter initial deposit" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-font-size: 16; -fx-text-fill: white;" text="Account Type:" />
                <TextField fx:id="accountTypeField" promptText="Enter account type" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-font-size: 16; -fx-text-fill: white;" text="Reference Number:" />
                <TextField fx:id="referenceNumberField" promptText="Enter reference number" />
            </VBox>
        </VBox>
    </HBox>
   <Label fx:id="accountlabel" layoutX="264.0" layoutY="400.0" textFill="WHITE" />
   <Button layoutX="229.0" layoutY="440.0" mnemonicParsing="false" onAction="#gotosuccess4" prefHeight="26.0" prefWidth="98.0" text="create" />
</AnchorPane>
